@page "/Group"
@inject HttpClient client;
@inject NavigationManager nav;
@inject NotificationService notification;


@if (isStandalone)
{
    <div class="w-100 text-center">
        <h3>Gruppe erstellen</h3>
    </div>
} 
<EditForm Model="typeof(PhotoShare.Shared.Group)">
      @if (!isStandalone) {
        <div class="form-control justify-content-center mt-2">
          < h4 > Gruppe erstellen </ h4 >
        </div>
      }
    <div class="form-control align-content-between justify-content-center">
        <Radzen.Blazor.RadzenTextBox id="@nameof(PhotoShare.Shared.Group.Name)" @bind-Value="Group.Name" Style="width:100%" Placeholder="Namen eingeben"/>
    </div>
    <div class="form-control align-content-between justify-content-center">
         <Radzen.Blazor.RadzenTextArea id="@nameof(PhotoShare.Shared.Group.Description)" @bind-Value="Group.Description" Style="width: 100%" Placeholder="Beschreibung" />
    </div>
    <div class="form-control align-content-center justify-content-center">
        <button class="btn btn-success w-75"type="submit" @onclick="Create">Gruppe erstellen</button>
    </div>

</EditForm>
 