
<EditForm Model="typeof(PhotoShare.Shared.Request.LoginModelRequest)">
    <div class="flex-column row align-content-center">
        <div class=" col-12 col-md-6 col-xl-3">
        <div class="align-content-between justify-content-center w-100 m-2">
            <Radzen.Blazor.RadzenTextBox id="@nameof(PhotoShare.Shared.Request.LoginModelRequest.Password)" @bind-Value="loginModelRequest.Password" Style="width:100%" Placeholder="@(IsPasswordSetup ? "Password eingeben" : "Bitte Password eingeben")" />
        </div>
        <div class="d-flex align-content-center justify-content-center w-100 m-2">
            <button class="btn btn-success w-50" type="submit" @onclick="OnLogin">@(IsPasswordSetup? "Optional: Passwort setzen" : "Einloggen")</button>
        </div>
        </div>
    </div>
</EditForm>